<AnchorPane fx:id="acSellingCustomerContainer" prefHeight="700.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.SupForImportModalController">
   <stylesheets>
      <URL value="@../css/base.css" />
      <URL value="@../css/sellingform.css" />
   </stylesheets>
   <styleClass>
      <String fx:value="child-container-root" />
      <String fx:value="background-silver" />
   </styleClass>
   <children>
      <VBox layoutX="2.0" prefHeight="200.0" prefWidth="100.0" styleClass="child-container-root">
         <children>
            <Pane prefHeight="66.0" prefWidth="500.0">
               <children>
                  <Label layoutX="169.0" layoutY="16.0" text="NHÀ CUNG CẤP">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Pane fx:id="pBtnExitGetSupplier" layoutX="440.0" prefHeight="50.0" prefWidth="80.0" styleClass="pExitBtnContainer">
                     <children>
                        <Button fx:id="btnExitGetSupplier" alignment="CENTER" mnemonicParsing="false" prefHeight="45.0" prefWidth="80.0" styleClass="btnExitForm" text="X" textFill="RED">
                           <font>
                              <Font name="System Bold" size="16.0" />
                           </font>
                        </Button>
                     </children>
                  </Pane>
               </children>
            </Pane>
            <Pane prefHeight="42.0" prefWidth="500.0">
               <children>
                  <TextField fx:id="txtSearchSupplier" layoutX="14.0" layoutY="7.0" prefHeight="20.0" styleClass="txtSearchCustomer" />
                  <Button fx:id="btnSearchSupplier" layoutX="169.0" layoutY="7.0" mnemonicParsing="false" styleClass="btnSearchProduct" text="Tìm Kiếm">
