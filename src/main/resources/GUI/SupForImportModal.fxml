                              <TableColumn fx:id="tbcSupID" editable="false" prefWidth="75.0" resizable="false" text="ID" />
                              <TableColumn fx:id="tbcSupplierName" editable="false" prefWidth="247.0" resizable="false" text="Name" />
                              <TableColumn fx:id="tbcSupplierPhone" editable="false" prefWidth="148.0" resizable="false" text="Phone" />
                           </columns>
                        </TableView>
                     </children>
                  </Pane>
               </content>
            </ScrollPane>
            <Pane prefHeight="42.0" prefWidth="500.0">
               <children>
                  <Button fx:id="btnSubmitSupplier" layoutX="211.0" layoutY="4.0" mnemonicParsing="false" styleClass="btnSearchProduct" text="Xác Nhận">
                     <padding>
                        <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
                     </padding>
                  </Button>
               </children>
            </Pane>
         </children>
      </VBox>
   </children>
